{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Service Mapping Schema",
  "description": "Schema for mapping extracted services to Energen calculator services",
  "type": "object",
  "properties": {
    "extractedService": {
      "type": "object",
      "description": "The service as extracted from the RFP"
    },
    "mappedService": {
      "type": "object",
      "properties": {
        "serviceType": {
          "type": "string",
          "enum": ["A", "B", "C", "D", "E", "F", "G", "H", "I", "J", "K", "CUSTOM"],
          "description": "Energen calculator service type"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for this mapping"
        },
        "parameters": {
          "type": "object",
          "description": "Service-specific parameters"
        },
        "notes": {
          "type": "string",
          "description": "Additional mapping notes or considerations"
        }
      },
      "required": ["serviceType", "confidence"]
    }
  },
  "required": ["extractedService", "mappedService"]
}
